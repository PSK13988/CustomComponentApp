<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/flContentThumbnail"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/colorlightblue"
                card_view:cardElevation="5dp">

                <ImageView
                    android:id="@+id/ivContent"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_music_note"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </android.support.v7.widget.CardView>


        </FrameLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/flContentThumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tvContentTitle"
                android:textStyle="normal"
                android:textColor="@color/colorlightblue"
                android:textSize="11dp"
                android:text="Entity Name"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvContentDesc"
                android:textStyle="normal"
                android:textSize="9dp"
                android:layout_below="@+id/tvContentTitle"
                android:textColor="@color/colorlightblue"
                android:text="Entity details"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/ivMenu"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>