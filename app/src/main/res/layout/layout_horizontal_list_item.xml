<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlContainer"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:gravity="center_horizontal"
        android:layout_width="95dp"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/flContentThumbnail"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@color/colorlightblue"
                card_view:cardElevation="6dp">

                <ImageView
                    android:id="@+id/ivContent"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_album"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

            </android.support.v7.widget.CardView>

        </FrameLayout>

        <TextView
            android:id="@+id/tvContentTitle"
            android:textStyle="normal"
            android:layout_below="@+id/flContentThumbnail"
            android:gravity="center_horizontal"
            android:textColor="@color/colorlightblue"
            android:text="Dont Let Me Down"
            android:textSize="11dp"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvContentDesc"
            android:textStyle="normal"
            android:gravity="center_horizontal"
            android:layout_below="@+id/tvContentTitle"
            android:textColor="@color/colorlightblue"
            android:text="The Chainsmokers"
            android:textSize="9dp"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>